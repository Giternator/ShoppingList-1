<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    >
    <TextView android:id="@+id/clone_list_name_label"
              android:layout_alignParentLeft="true"
              android:layout_alignParentTop="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:text="@string/clone_list_name"
              android:textSize="20dp"
        />
    <EditText android:id="@+id/clone_list_edit_name"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:inputType="textCapWords"
              android:layout_alignBottom="@+id/clone_list_name_label"
              android:layout_toRightOf="@+id/clone_list_name_label"
              android:layout_marginLeft="30dp"
              android:selectAllOnFocus="true"
              />
    
    <TextView android:id="@+id/clone_list_keep_complete_label"
              android:layout_alignParentLeft="true"
              android:layout_below="@+id/clone_list_name_label"
              android:layout_width="wrap_content"
              android:paddingTop="20dp"
              android:paddingRight="20dp"
              android:text="@string/clone_list_reset_to_incomplete"
              android:textSize="18dp"
              android:layout_height="45dp"
            />
    
    <CheckBox android:id="@+id/clone_list_keep_complete_check"
              android:layout_alignBottom="@+id/clone_list_keep_complete_label"
              android:layout_toRightOf="@+id/clone_list_keep_complete_label"
              android:layout_alignParentRight="true"
              android:layout_width="0dp"
              android:paddingTop="20dp"
              android:layout_height="25dp"
            />

</RelativeLayout>